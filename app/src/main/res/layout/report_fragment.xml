<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        tools:context=".report_module.ReportFragment">
    <data>

        <variable
                name="reportViewModel"
                type="com.example.myadventure.report_module.ReportViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/reportConstraintLayout">
        <TextView
                android:text="@string/report_disclaimer_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/disclaimer2"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="40dp"
                tools:text="@string/report_disclaimer_2"/>
        <TextView
                android:text="@string/report_disclaimer_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/disclaimer1"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
                android:layout_marginBottom="75dp" app:layout_constraintBottom_toBottomOf="parent"
                tools:text="@string/report_disclaimer_1"/>
        <TextView
                android:text="@string/report_title_detective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/titleDetective"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/barChartSpaceGame"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
                app:layout_constraintBottom_toTopOf="@+id/barChartDetectiveGame"
                tools:text="@string/report_title_detective"/>
        <TextView
                android:text="@string/report_title_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/titleSpace"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
        />
        <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChartSpaceGame"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="100dp"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.01">
        </com.github.mikephil.charting.charts.BarChart>
        <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChartDetectiveGame"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="330dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="100dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>