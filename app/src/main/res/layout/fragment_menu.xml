<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             tools:context="com.example.myadventure.MenuFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/menuConstraint"
            android:background="@android:color/background_light">

        <Button
                android:layout_width="350dp"
                android:id="@+id/buttonStartGameOne"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp" android:layout_marginStart="30dp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:background="@drawable/bt_space_game" android:backgroundTintMode="src_over"
                app:layout_constraintHorizontal_bias="0.0" android:layout_height="200dp"/>
        <Button
                android:layout_width="50dp"
                android:layout_height="50dp" android:id="@+id/buttonTutorialSpace"
                app:layout_constraintTop_toBottomOf="@+id/buttonStartGameOne"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="50dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.934"
                android:background="@drawable/bt_tutorial"/>
        <Button
                android:layout_width="350dp"
                android:layout_height="200dp" android:id="@+id/buttonStartGameTwo"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:background="@drawable/bt_detective_game"
                android:layout_marginTop="100dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonStartGameOne"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>